@model IniciarSesion

@{
        ViewBag.Title = "Iniciar Sesión";

}

<h2>Iniciar Sesion</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="IniciarSesion" method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="Usuario" class="form-label"></label>
        </div>
        <div class="col-md-4">
            <input class="form-control" asp-for="Usuario"/>
        </div>
        <div class="col">
            <span asp-validation-for="Usuario" class="text-danger"></span>
        </div>

    </div>

    <div class="row mb-2">
        <div class="col-md-2">
            <label asp-for="Contraseña" class="form-label"></label>
        </div>
        <div class="col-md-4">
            <input class="form-control" asp-for="Contraseña" type="password"/>
        </div>
        <div class="col">
            <span asp-validation-for="Contraseña" class="text-danger"></span>
        </div>
        

    </div>

    <div class="row">
        <div class="col offset-md-2">
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
    <div class="row">
        <div class="col offset-md-4">
            ¿No tienes cuenta? <a asp-controller="Cuenta" asp-action="Registrarse">Regístrate</a>
        </div>
    </div>
    
</form>