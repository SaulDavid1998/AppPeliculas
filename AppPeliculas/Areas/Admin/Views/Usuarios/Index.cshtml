@model List<User>

@{
    ViewBag.Title = "Gestión de Usuarios";
}

<h1 class="mb-2">Gestion de Usuarios</h1>

@if (TempData["Mensaje"] != null)
{
    <h4 class="text-center text-primary">@TempData["Mensaje"]</h4>
}


<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th></th>
            <th></th>
 
        </tr>
    </thead>

    <tbody>
        @if (Model.Count()==0)
        {
            <tr>
                <td>No hay usuarios registrados</td>
            </tr>
        }
        else
        {           
            @foreach (User registro in Model)
            {
                <tr>
                    <td>@registro.UserName</td>
                    <td>
                        @if (registro.Roles.Count > 0)
                        {
                            @registro.Roles[0]
                        }
                        else
                        {
                            <span >Sin rol</span>
                        }
                    </td>

                    

                    <td>
                        @if (registro.UserName=="Administrador")
                        {
                            <button class="btn btn-primary" disabled>Agregar a Admin</button>

                        }
                        else
                        {
                            <form method="post" asp-action="AgregarAdmin">
                                <input type="hidden" name="Id" value="@registro.Id" />
                                <button type="submit" class="btn btn-primary">Agregar a Admin</button>
                            </form>
                        }
                        
                    </td>

                    <td>
                        @if (registro.UserName == "Administrador")
                        {
                            <button class="btn btn-warning" disabled>Eliminar de Admin</button>
                        }
                        else
                        {
                            <form method="post" asp-action="EliminarAdmin">
                                <input type="hidden" name="Id" value="@registro.Id" />
                                <button type="submit" class="btn btn-warning">Eliminar de Admin</button>
                            </form>
                        }

                    </td>
                </tr>
               

            }

            
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Pelicula" asp-area="Admin" class="btn btn-primary">Volver</a>