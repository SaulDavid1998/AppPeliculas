@model List<User>

@{
    ViewBag.Title = "Gestión de Usuarios";
}

<h1 class="mb-2">Gestion de Usuarios</h1>

<h5 class="mt-2">
    <a asp-action="Agregar">Agregar Usuario</a>
</h5>

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count()==0)
        {
            <tr>
                <td>No hay usuarios registrados</td>
            </tr>
        }
        else
        {           
            @foreach (User registro in Model)
            {
                <tr>
                    <td>@registro.UserName</td>
                    <td>
                        @if (registro.Roles.Count > 0)
                        {
                            @registro.Roles[0]
                        }
                        else
                        {
                            <span >Sin rol</span>
                        }
                    </td>

                    

                    <td>
                        <form method="post" asp-action="AgregarAdmin" asp-route-id="@registro.Id">
                            <button type="submit" class="btn btn-primary">Agregar a Admin</button>
                        </form>
                    </td>
                </tr>
               

            }

            
        }
    </tbody>
</table>